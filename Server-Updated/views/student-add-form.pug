extends layout

block content
  // breadcrumb start
  .ui.big.breadcrumb
    a.section Home
    i.right.chevron.icon.divider
    a.section Students
    i.right.chevron.icon.divider
    .active.section Add Student
  // breadcrumb end
  h1#ttt.heading-secondary Add Student
  p.mb-normal
    | You can add a new student to the system using this page. Please note that filling out all the fields marked with asterics is
    | mandatory, and the ones without any symbol is optional to filling in.
  div.carded
    h3#ttt.heading-tertiary Basics
    // form start
    form.ui.form(action='/students', method='POST')
      .field.required
        label First Name
        input(name='firstName' autofocus='' required='' type='text')
      .field.required
        label Last Name
        input(name='lastName' required='' type='text')
      .field.required
        label Gender
        input(name='gender' required='' type='text')
      .field.required
        label Phone
        input(name='phone' required='' type='text')
      .field.required
        label Address
        textarea(name="address", cols="30", rows="1")
      .field.required
        label Date of Birth
        input(name='dateOfBirth' required='' type='date')
      br
      .field.required
        .ui.checkbox
          input.hidden(tabindex='0' type='checkbox')
          label I agree to the Terms and Conditions
      button.ui.button.mb-large.blue(type='submit') Save Student
  // form end
